<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <requires lib="libhandy" version="1.0"/>

  <template class="YelpWindow" parent="HdyApplicationWindow">
    <property name="icon-name">org.gnome.Yelp</property>
    <signal name="key-press-event" handler="window_key_press"/>
    <signal name="button-press-event" handler="window_button_press"/>

    <child>
      <object class="GtkBox" id="vbox_full">
        <property name="orientation">vertical</property>

        <child>
          <object class="HdyHeaderBar" id="header">
            <property name="show-close-button">true</property>

            <!-- Back/Forward -->
            <child>
              <object class="GtkBox">
                <style>
                  <class name="linked"/>
                </style>

                <child>
                  <object class="GtkButton" id="go_back_button">
                    <property name="tooltip-text" translatable="yes">Back</property>
                    <property name="valign">center</property>
                    <property name="action-name">win.yelp-view-go-back</property>
                    <style>
                      <class name="image-button"/>
                    </style>
                    <child>
                      <object class="GtkImage">
                        <property name="visible">True</property>
                        <property name="icon-name">go-previous-symbolic</property>
                        <property name="icon-size">1</property>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="pack-type">start</property>
                    <property name="expand">false</property>
                    <property name="fill">false</property>
                  </packing>
                </child>

                <child>
                  <object class="GtkButton" id="go_forward_button">
                    <property name="tooltip-text" translatable="yes">Forward</property>
                    <property name="valign">center</property>
                    <property name="action-name">win.yelp-view-go-forward</property>
                    <style>
                      <class name="image-button"/>
                    </style>
                    <child>
                      <object class="GtkImage">
                        <property name="visible">True</property>
                        <property name="icon-name">go-next-symbolic</property>
                        <property name="icon-size">1</property>
                      </object>
                    </child>
                  </object>
                  <packing>
                    <property name="pack-type">start</property>
                    <property name="expand">false</property>
                    <property name="fill">false</property>
                  </packing>
                </child>
              </object>
              <packing>
                <property name="pack-type">start</property>
              </packing>
            </child>

            <!-- Gear menu -->
            <child>
              <object class="GtkMenuButton" id="menu_button">
                <property name="tooltip-text" translatable="yes">Menu</property>
                <property name="menu-model">primary-menu</property>
                <property name="valign">center</property>
                <style>
                  <class name="image-button"/>
                </style>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>

            <!-- Search -->
            <child>
              <object class="GtkToggleButton" id="search_button">
                <property name="tooltip-text" translatable="yes">Search (Ctrl+S)</property>
                <property name="valign">center</property>
                <style>
                  <class name="image-button"/>
                </style>
                <child>
                  <object class="GtkImage">
                    <property name="visible">True</property>
                    <property name="icon-name">edit-find-symbolic</property>
                    <property name="icon-size">1</property>
                  </object>
                </child>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>

            <!-- Bookmarks -->
            <child>
              <object class="GtkMenuButton" id="bookmark_menu_button">
                <property name="tooltip-text" translatable="yes">Bookmarks</property>
                <property name="valign">center</property>
                <style>
                  <class name="image-button"/>
                </style>
                <child>
                  <object class="GtkImage">
                    <property name="visible">True</property>
                    <property name="icon-name">user-bookmarks-symbolic</property>
                    <property name="icon-size">1</property>
                  </object>
                </child>
                <property name="popover">bookmark_menu</property>
              </object>
              <packing>
                <property name="pack-type">end</property>
              </packing>
            </child>								

          </object>
        </child>

        <child>
          <object class="GtkBox" id="vbox_view">
            <property name="orientation">vertical</property>

            <child>
              <object class="GtkSearchBar" id="search_bar">
                <property name="search-mode-enabled" bind-source="search_button" bind-property="active" bind-flags="bidirectional"/>
              </object>
              <packing>
                <property name="pack-type">start</property>
                <property name="expand">false</property>
                <property name="fill">false</property>
              </packing>
            </child>

            <child>
              <object class="GtkOverlay" id="view_overlay">
                <!-- Find -->
                <child type="overlay">
                  <object class="GtkRevealer" id="find_bar">
                    <property name="halign">end</property>
                    <property name="margin-end">6</property>
                    <property name="valign">start</property>

                    <child>
                      <object class="GtkFrame">
                        <property name="shadow-type">none</property>
                        <style>
                          <class name="yelp-find-frame"/>
                        </style>

                        <child>
                          <object class="GtkBox">
                            <style>
                              <class name="linked"/>
                            </style>

                            <child>
                              <object class="GtkSearchEntry" id="find_entry"/>
                              <packing>
                                <property name="pack-type">start</property>
                                <property name="expand">true</property>
                                <property name="fill">true</property>
                              </packing>
                            </child>

                            <child>
                              <object class="GtkButton" id="find_prev_button">
                                <property name="valign">center</property>
                                <style>
                                  <class name="raised"/>
                                </style>
                                <child>
                                  <object class="GtkImage">
                                    <property name="visible">True</property>
                                    <property name="icon-name">go-up-symbolic</property>
                                    <property name="icon-size">1</property>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="pack-type">start</property>
                                <property name="expand">false</property>
                                <property name="fill">false</property>
                              </packing>
                            </child>

                            <child>
                              <object class="GtkButton" id="find_next_button">
                                <property name="valign">center</property>
                                <style>
                                  <class name="raised"/>
                                </style>
                                <child>
                                  <object class="GtkImage">
                                    <property name="visible">True</property>
                                    <property name="icon-name">go-down-symbolic</property>
                                    <property name="icon-size">1</property>
                                  </object>
                                </child>
                              </object>
                              <packing>
                                <property name="pack-type">start</property>
                                <property name="expand">false</property>
                                <property name="fill">false</property>
                              </packing>
                            </child>
                          </object>
                        </child>
                      </object>
                    </child>
                  </object>
                </child>

                <child>
                  <object class="YelpView" id="view"/>
                </child>
              </object>
              <packing>
                <property name="pack-type">start</property>
                <property name="expand">true</property>
                <property name="fill">true</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="pack-type">start</property>
            <property name="expand">true</property>
            <property name="fill">true</property>
          </packing>
        </child>
      </object>
    </child>
  </template>

  <menu id="primary-menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">New Window</attribute>
        <attribute name="action">win.yelp-window-new</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Find…</attribute>
        <attribute name="action">win.yelp-window-find</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Print…</attribute>
        <attribute name="action">win.yelp-view-print</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Previous Page</attribute>
        <attribute name="action">win.yelp-view-go-previous</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Next Page</attribute>
        <attribute name="action">win.yelp-view-go-next</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">Larger Text</attribute>
        <attribute name="action">app.yelp-application-larger-text</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">Smaller Text</attribute>
        <attribute name="action">app.yelp-application-smaller-text</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label" translatable="yes">All Help</attribute>
        <attribute name="action">win.yelp-window-go-all</attribute>
      </item>
    </section>
  </menu>

  <object class="GtkPopover" id="bookmark_menu">
    <property name="border-width">12</property>

    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="spacing">12</property>
        <property name="visible">true</property>

        <child>
          <object class="GtkScrolledWindow" id="bookmark_sw">
            <property name="hscrollbar-policy">never</property>
            <property name="vscrollbar-policy">automatic</property>
            <property name="height-request">200</property>
            <property name="shadow-type">in</property>
            <property name="visible">true</property>

            <child>
              <object class="GtkListBox" id="bookmark_list">
                <property name="selection-mode">none</property>
                <property name="visible">true</property>

                <child type="placeholder">
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">No bookmarks</property>
                    <property name="visible">true</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
          <packing>
            <property name="pack-type">start</property>
            <property name="expand">true</property>
            <property name="fill">true</property>
          </packing>
        </child>

        <child>
          <object class="GtkButton" id="bookmark_add">
            <property name="label" translatable="yes">Add Bookmark</property>
            <property name="visible">true</property>
          </object>
          <packing>
            <property name="pack-type">end</property>
            <property name="expand">false</property>
            <property name="fill">false</property>
          </packing>
        </child>

        <child>
          <object class="GtkButton" id="bookmark_remove">
            <property name="label" translatable="yes">Remove Bookmark</property>
            <property name="visible">true</property>
          </object>
          <packing>
            <property name="pack-type">end</property>
            <property name="expand">false</property>
            <property name="fill">false</property>
          </packing>
        </child>
      </object>
    </child>
  </object>

  <object class="GtkSizeGroup" id="find_size_group">
    <property name="mode">vertical</property>
    <widgets>
      <widget name="find_entry"/>
      <widget name="find_prev_button"/>
      <widget name="find_next_button"/>
    </widgets>
  </object>
</interface>
